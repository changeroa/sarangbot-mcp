# Server
PORT=3000
NODE_ENV=development

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<your_username>:<your_password>@<your_cluster>.mongodb.net/sarang_bot?retryWrites=true&w=majority

# Kakao API (for map search)
KAKAO_REST_API_KEY=your_kakao_rest_api_key

# ============================================
# Authentication Settings
# ============================================
# AUTH_TYPE: oauth (default) | key_token | none
AUTH_TYPE=oauth

# Skip authentication in development (not recommended for production)
SKIP_AUTH=false

# ============================================
# MCP Settings
# ============================================
# Enable stateless mode (recommended for PlayMCP)
MCP_STATELESS_MODE=false

# Session settings (only for stateful mode)
SESSION_TTL_MS=1800000
MAX_SESSIONS=10000

# ============================================
# Response Settings
# ============================================
# Maximum response size in bytes (50KB default)
MAX_RESPONSE_SIZE=51200

# ============================================
# Logging
# ============================================
# LOG_LEVEL: debug | info | warn | error
LOG_LEVEL=info
